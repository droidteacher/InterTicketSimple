<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hu.zsoltkiss.interticketsimple">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.TheApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InterTicketSimple"
        tools:targetApi="31">

        <activity
            android:name=".ui.LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.countries.CountryListActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.task3.Task3Activity"
            android:exported="true"/>

        <activity
            android:name=".ui.task1.Task1Activity"
            android:exported="true"/>

        <activity
            android:name=".ui.task2.Task2Activity"
            android:exported="true"/>

    </application>

</manifest>